<Window x:Class="CloneyPad.CloneyPadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloneyPad"
        mc:Ignorable="d"
        Title="CloneyPad" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <!-- File Menu -->
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open..."/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="Save _As..."/>
            </MenuItem>
            
            <!-- Edit Menu -->
            <MenuItem Header="_Edit">
                <MenuItem Header="_Cut"/>
                <MenuItem Header="C_opy"/>
                <MenuItem Header="_Paste"/>
            </MenuItem>
            <MenuItem Header="_About"/>
        </Menu>
        
        <!-- Status Bar -->
        <StatusBar Height="20" DockPanel.Dock="Bottom">
            <Label Margin="0,-10,-12,-10" Width="50" Content="Length:"/>
            <Label Margin="0,-10,0,-10" Width="Auto" Content="74839"/>
        </StatusBar>
        
        <!-- TextBox Document View -->
        <TextBox></TextBox>
    </DockPanel>
</Window>
